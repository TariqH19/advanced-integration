        <a href="/hostedfields">Braintree Hosted Fields</a>
        <a href="/cards">Cards</a>
      </div>
    </div>
    <main>
      <h1>EJS and React Integration</h1>

      <!-- React root element -->
      <div id="react-root"></div>
    </main>
    <!-- Include the bundled React script -->
    <script src="/src/js/bundle.js"></script>
  </body>
</html>
