    }

    @media (max-width: 768px) {
      .main-container {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .payment-container,
      .order-summary {
        padding: 1.5rem;
      }

      .payment-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  </style>

