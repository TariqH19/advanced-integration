<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PayPal JS SDK Standard Integration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            padding-top: 2rem;
        }

        .payment-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }

        .product-info {
            background: linear-gradient(45deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .order-summary {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border: 1px solid #e9ecef;
        }

        #paypal-button-container {
            margin: 2rem 0;
        }

        .result-message {
            margin-top: 2rem;
            padding: 1rem;
            border-radius: 10px;
            display: none;
        }

        .result-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .result-error {
            background: #b7fba4;
            color: #65c119;
            border: 1px solid #c3eeb6;
        }

        .feature-badge {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.8rem;
            margin: 0.25rem;
            display: inline-block;
        }

        /* Mobile Responsive Styles */
        @media (max-width: 768px) {
            .container {
                padding-top: 1rem;
                padding-left: 1rem;
                padding-right: 1rem;
            }

            .payment-card {
                border-radius: 15px;
                margin: 0 0.5rem;
            }

            .navbar-brand {
                font-size: 1.4rem;
            }

            .product-info {
                padding: 1rem;
                margin-bottom: 1.5rem;
                border-radius: 10px;
            }

            .product-info h3 {
                font-size: 1.3rem;
            }

            .order-summary {
                padding: 1rem;
                border-radius: 10px;
            }

            .order-summary h5 {
                font-size: 1.1rem;
            }

            #paypal-button-container {
                margin: 1.5rem 0;
            }

            .result-message {
                margin-top: 1rem;
                padding: 0.8rem;
                font-size: 0.9rem;
            }

            .feature-badge {
                font-size: 0.7rem;
                padding: 0.2rem 0.6rem;
                margin: 0.2rem;
            }
        }

        @media (max-width: 576px) {
            .container {
                padding-left: 0.5rem;
                padding-right: 0.5rem;
            }

            .payment-card {
                border-radius: 10px;
                margin: 0;
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            }

            .navbar {
                padding: 0.5rem 1rem;
            }

            .navbar-brand {
                font-size: 1.2rem;
            }

            .nav-link {
                font-size: 0.9rem;
            }

            .product-info {
                padding: 0.8rem;
                margin-bottom: 1rem;
            }

            .product-info h3 {
                font-size: 1.2rem;
                margin-bottom: 0.5rem;
            }

            .product-info p {
                font-size: 0.9rem;
                margin-bottom: 0.5rem;
            }

            .order-summary {
                padding: 0.8rem;
            }

            .order-summary h5 {
                font-size: 1rem;
                margin-bottom: 0.8rem;
            }

            .d-flex.justify-content-between {
                font-size: 0.9rem;
            }

            .fw-bold {
                font-size: 1rem;
            }
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fab fa-paypal text-primary me-2"></i>
                PayPal Integration Demo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/">
                        <i class="fas fa-home me-1"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="payment-card p-4 p-md-4 p-sm-3">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-2">
                            <i class="fab fa-js-square text-warning me-2"></i>
                            PayPal JS SDK Standard Integration
                        </h1>
                        <p class="text-muted">Complete payment integration with advanced features</p>
                    </div>

                    <!-- Product Information -->
                    <div class="product-info text-center">
                        <h4 class="mb-3">
                            <i class="fas fa-tshirt me-2"></i>
                            Super Fresh T-Shirt
                        </h4>
                        <p class="mb-3">Premium quality cotton t-shirt with modern design</p>
                        <div class="mb-2">
                            <span class="feature-badge">
                                <i class="fas fa-mobile-alt me-1"></i>App Switch
                            </span>
                            <span class="feature-badge">
                                <i class="fas fa-shipping-fast me-1"></i>Shipping Options
                            </span>
                            <span class="feature-badge">
                                <i class="fas fa-address-card me-1"></i>Contact Module
                            </span>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="order-summary">
                        <h5 class="mb-3">
                            <i class="fas fa-receipt me-2"></i>
                            Order Summary
                        </h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Super Fresh T-Shirt</span>
                            <span>$100.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Quantity</span>
                            <span>1</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>SKU</span>
                            <span class="text-muted">sku01</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total</span>
                            <span>$100.00 USD</span>
                        </div>
                    </div>

                    <!-- Payment Section -->
                    <div class="text-center mb-4">
                        <h5 class="mb-3">
                            <i class="fas fa-credit-card me-2"></i>
                            Choose Payment Method
                        </h5>
                        <p class="text-muted">Secure payment powered by PayPal</p>
                    </div>

                    <!-- PayPal Button Container -->
                    <div id="paypal-button-container"></div>

                    <!-- Result Message -->
                    <div id="result-message" class="result-message"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script
        src="https://www.paypal.com/sdk/js?client-id=AYKEHhMOHxkycKjSnN548FOs6qDSY-FT_97BIziC-GvhPIbXgb5pdunsni91NhaBvD590azAxRqkZntY&buyer-country=US&currency=USD&components=buttons&enable-funding=paylater,card,venmo"
        data-sdk-integration-source="developer-studio"></script>
    <script src="contactmodule.js"></script>
    <script>
        // Enhanced result message function
        function resultMessage(message) {
            const container = document.querySelector("#result-message");
            container.innerHTML = message;
            container.style.display = "block";

            // Add appropriate styling based on message content
            if (message.includes("successful") || message.includes("completed")) {
                container.className = "result-message result-success";
            } else {
                container.className = "result-message result-error";
            }

            // Scroll to result
            container.scrollIntoView({ behavior: 'smooth' });
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>